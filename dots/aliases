# Key Bindings
bind '"\C-]":"\C-e\C-u pbcopy <<"EOF"\n\C-y\nEOF\n"' # Ctrl-] to copy the current line in the terminal to clipboard

# General

alias aa='open ~/dots/aliases && . ~/dots/aliases'

# Git (some taken from https://github.com/aziz/dotfiles/blob/master/bash/aliases/git.aliases.bash)

alias g='git'
alias gi='git init'
alias gcl='git clone'
alias ga='git add'
alias gaa='git add . -v'
alias gau='git add -u -v'
alias gs='git status'
alias gl='git pull'
alias pull='git pull'
alias gp='git push'
alias push='git push'
alias gdw='git diff --color-words'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'